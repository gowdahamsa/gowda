<script>
    document.write("<center><table> <tr><th>Num</th> <th>Squares</th> <th>Cubes</th>")
        for(var n=0;n<=10;n++)
        {
            document.write("<tr><td>"+n+"</td><td>"+n*n+"</td><td>"+n*n*n+"</td></tr>")
        }
    document.write("</table> </center>")
</script>
